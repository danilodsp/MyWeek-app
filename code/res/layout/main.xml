<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <GridLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:rowCount="9"
        android:columnCount="5"
        android:id="@+id/grid1"
        >
        
        <Space 
            android:layout_column="0"
            android:layout_width="10dp"
            />
        
        <Space 
            android:layout_row="0"
            android:layout_height="10dp"
            />
        
        <Button 
            android:id="@+id/buttonSeg"
            android:text="@string/seg"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="1"
            android:layout_row="1"
            />
        
        <Space 
            android:layout_column="2"
            android:layout_width="1dp"
            />
        
        <Button 
            android:id="@+id/buttonTer"
            android:text="@string/ter"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="3"
            android:layout_row="1"
            />
        
        <Space 
            android:layout_row="2"
            android:layout_height="10dp"
            />
        
        <Button 
            android:id="@+id/buttonQua"
            android:text="@string/qua"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="1"
            android:layout_row="3"
            />
        
        <Button 
            android:id="@+id/buttonQui"
            android:text="@string/qui"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="3"
            android:layout_row="3"
            />
        
        <Space 
            android:layout_row="4"
            android:layout_height="10dp"
            />
        
        <Button 
            android:id="@+id/buttonSex"
            android:text="@string/sex"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="1"
            android:layout_row="5"
            />
        
        <Button 
            android:id="@+id/buttonSab"
            android:text="@string/sab"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="3"
            android:layout_row="5"
            />
        
        <Space 
            android:layout_row="6"
            android:layout_height="10dp"
            />
        
        <Button 
            android:id="@+id/buttonDom"
            android:text="@string/dom"
            android:layout_width="135dp"
            android:layout_height="85dp"
            android:textSize="52dip"
            android:layout_column="1"
            android:layout_row="7"
            />
        
        <Button 
            android:id="@+id/buttonAdd"
            android:text="@string/add"
            android:layout_width="135dp"
            android:textSize="60dip"
            android:layout_column="3"
            android:layout_row="7"
            />
        
    </GridLayout>

</LinearLayout>